<div class="col-lg-12 text-center v-center">
<h1>Edit Album</h1>
</div>

<div class="input-group" style="width:340px;margin:0 auto;">
	<%= form_for( @album, metod: :put, :html => { :multipart => true}) do |f| %>
		<p class="lead"> Album Name
		  <%= f.text_field :name, :autofocus => true, :class => "form-control input-lg" %>
		</p>
		<%= f.fields_for :photos, @album.photos.build do |p| %>
			<p class="lead"> Photo Name
		  		<%= p.text_field :name, :class => "form-control input-lg" %>
			</p>

			<p class="lead">
				<%= p.file_field :pic %>
			</p>
		<% end %>
		<p class="lead">
			<%= f.select :privacy, [["Public"], ["Private"], ["Visible to Friends"]] %>
		</p>
		<div class="col-lg-12 text-center v-center">
	    	<%= f.submit "Update", :class => "btn btn-lg btn-primary" %></div>
	  	</div>
	<% end %>
</div>