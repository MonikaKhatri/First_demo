<center>
<h1>
	<%= @album.name %>
	<% if @user.oauth_token == nil %>
		<%= link_to "Add Photo", edit_user_album_path(@user,@album), class: "btn btn-primary btn-lg" %>
	<% end %>
</h1>
<div class="container">
    <div class="row">
    	<% if @user.oauth_token == nil %>
	        <% @photos.each do |photo| %>
	            <div class="col-md-3">
	             	<div class="panel panel-default">
	                    <div class="panel-heading">
	                        <h3>
	                            <%= photo.name %>
	                        </h3>
	                    </div>
	                    <div class="panel-body panelbodylead">
	                        <%= image_tag photo.pic.url, :size => "150x150" %>
	                	</div>
	                	<% if current_user == @user %>
                        	<%= link_to "Delete", user_album_path(@user.id,@album, :photo_id => photo.id), method: :delete, class: "btn btn-danger btn-lg" %>
                   		<% end %>
	                </div>
	            </div>   
	        <% end %>
        <% else %>
        	<% @photos.each do |photo| %>
	            <div class="col-md-3">
	             	<div class="panel panel-default">
	                    <div class="panel-body panelbodylead">
	                        <%= image_tag photo.source, :size => "150x150" %>
	                	</div>
	                </div>
	            </div>   
	        <% end %>
        <% end %>
    </div> 
</div>
</center>