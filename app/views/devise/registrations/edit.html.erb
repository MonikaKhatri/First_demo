<div class="col-lg-12 text-center v-center">
<h1>Edit <%= resource_name.to_s.humanize %></h1>
</div>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :multipart => :true }) do |f| %>
  <%= devise_error_messages! %>
<div class="col-lg-12 v-center input-group" style="width:340px;margin:0 auto;">

  <p class="lead"> Username<br />
  <%= f.text_field :username, :autofocus => true, :class => "form-control input-lg" %></p>

  <p class="lead">
  <%= f.label :location %><br />
  <%= f.text_field :location, :class => "form-control input-lg" %></p>

  <p class="lead">
  <%= f.label :email %><br />
  <%= f.email_field :email, :class => "form-control input-lg" %>
  </p>


  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <p class="lead">
  <%= f.label :password %><br /><i>(leave blank if you don't want to change it)</i><br />
  <%= f.password_field :password, :class => "form-control input-lg" %></p> 
 

  <p class="lead">
  <%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, :class => "form-control input-lg" %>
  </p>

  <p class="lead">
  <%= f.label :current_password %><br /><i>(we need your current password to confirm your changes)</i><br />
  <%= f.password_field :current_password, :class => "form-control input-lg" %>
</p> 

<p class="lead">
  <%= f.file_field :photo %>
</p>
  

  <div class="col-lg-12 text-center v-center">
    <%= f.submit "Update", :class => "btn btn-lg btn-primary" %><br /><br /></div><br /> 
    <h3 class="lead">Unhappy? </h3>




    <div class="btn btn-lg btn-primary col-lg-12 text-center v-center">


    <%= link_to "Cancel my account",registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>

</div>
<br><br>
<div class="col-lg-12 text-center v-center lead"><br><br>
  <%= link_to "Back", :back %><br><br><br>
</div>
  </div>


  </div>
<% end %>

