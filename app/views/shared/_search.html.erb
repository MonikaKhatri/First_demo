<h1>Search User</h1>
<%= form_tag root_path, :method => 'get' do %>
          
        <div class="input-group" style="width:340px;margin:0 auto;">
             <table>
             	<tr>
                    <td> <%= text_field_tag :search, params[:search], :autofocus => true, :class => "form-control input-lg", :placeholder => "Enter Username here" %>
                    </td>
             	<td>
             		<div>
             			<%= submit_tag "Search", :username => nil, :class => "btn btn-lg btn-primary" %>
             		</div>
             	</td>
             </tr>
        	</table>
        </div>
<% end %>